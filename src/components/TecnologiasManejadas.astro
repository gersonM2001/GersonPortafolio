---
import { tecnologias } from '../content/tecnologias/tecnologias.ts';

export interface Props {
  lenguajes: { nombre: string; icono: string; porcentaje: number }[]; // Asegúrate de que los lenguajes tengan un 'porcentaje'
  basesDeDatos: { nombre: string; icono: string; porcentaje: number }[]; // Lo mismo para las bases de datos
  frameworks: { nombre: string; icono: string; porcentaje: number }[]; // Y para los frameworks
}
---

<div class="bg-[#677791] p-6 rounded-lg shadow-lg max-w-4xl mx-auto">
  <h2 class="text-3xl font-bold text-center text-[#f9f9f9] mb-6">Tecnologías Manejadas</h2>

  <!-- Lenguajes de Programación -->
  <section class="mb-8">
    <h3 class="text-2xl font-semibold text-[#f9f9f9] mb-4">Lenguajes de Programación</h3>
    <div class="grid grid-cols-3 gap-6">
      {tecnologias.lenguajes.map((lenguaje) => (
        <div class="text-center bg-[#f9f9f9] p-4 rounded-lg shadow-md">
          <img src={lenguaje.icono} alt={lenguaje.nombre} class="w-16 h-16 mx-auto mb-2" />
          <p class="text-[#677791] font-semibold">{lenguaje.nombre}</p>

          <!-- Barra de porcentaje -->
          <div class="relative pt-1">
            <div class="flex mb-2 items-center justify-between">
              <span class="text-sm text-[#677791]">{lenguaje.porcentaje}%</span>
            </div>
            <div class="flex mb-4">
              <div class="w-full bg-gray-300 rounded-full">
                <div
                  class="bg-[#023048] text-xs leading-none py-1 text-center text-[#f9f9f9] rounded-full"
                  style={`width: ${lenguaje.porcentaje}%`}
                >
                  {/* Barra de progreso */}
                </div>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Bases de Datos -->
  <section>
    <h3 class="text-2xl font-semibold text-[#f9f9f9] mb-4">Bases de Datos</h3>
    <div class="grid grid-cols-3 gap-6">
      {tecnologias.basesDeDatos.map((base) => (
        <div class="text-center bg-[#f9f9f9] p-4 rounded-lg shadow-md">
          <img src={base.icono} alt={base.nombre} class="w-16 h-16 mx-auto mb-2" />
          <p class="text-[#677791] font-semibold">{base.nombre}</p>

          <!-- Barra de porcentaje -->
          <div class="relative pt-1">
            <div class="flex mb-2 items-center justify-between">
              <span class="text-sm text-[#677791]">{base.porcentaje}%</span>
            </div>
            <div class="flex mb-4">
              <div class="w-full bg-gray-300 rounded-full">
                <div
                  class="bg-[#023048] text-xs leading-none py-1 text-center text-[#f9f9f9] rounded-full"
                  style={`width: ${base.porcentaje}%`}
                >
                  {/* Barra de progreso */}
                </div>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Frameworks -->
  <section>
    <h3 class="text-2xl font-semibold text-[#f9f9f9] mb-4">Frameworks</h3>
    <div class="grid grid-cols-3 gap-6">
      {tecnologias.Frameworks.map((framework) => (
        <div class="text-center bg-[#f9f9f9] p-4 rounded-lg shadow-md">
          <img src={framework.icono} alt={framework.nombre} class="w-16 h-16 mx-auto mb-2" />
          <p class="text-[#677791] font-semibold">{framework.nombre}</p>

          <!-- Barra de porcentaje -->
          <div class="relative pt-1">
            <div class="flex mb-2 items-center justify-between">
              <span class="text-sm text-[#677791]">{framework.porcentaje}%</span>
            </div>
            <div class="flex mb-4">
              <div class="w-full bg-gray-300 rounded-full">
                <div
                  class="bg-[#023048] text-xs leading-none py-1 text-center text-[#f9f9f9] rounded-full"
                  style={`width: ${framework.porcentaje}%`}
                >
                  {/* Barra de progreso */}
                </div>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>
</div>
