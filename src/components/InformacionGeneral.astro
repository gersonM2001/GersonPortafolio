---
export interface Props {
  name: string;
  title: string;
  description: string;
  imageUrl: string;
}
---

<div class="bg-[#f9f9f9] p-6 rounded-lg shadow-lg max-w-4xl mx-auto">
  <div class="flex items-center space-x-6">
    <img src={Astro.props.imageUrl} alt={Astro.props.name} class="w-32 h-32 rounded-full border-4 border-[#677791]" />
    <div>
      <h1 class="text-4xl font-bold text-[#023048]">{Astro.props.name}</h1>
      <p class="text-xl text-[#677791]">{Astro.props.title}</p>
      <p class="mt-4 text-[#333333]">{Astro.props.description}</p>
    </div>
  </div>
</div>
